{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "./build/",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "jsx": "react",
    "types": [
      "react",
      "jest",
      "reflect-metadata",
      "node"
    ],
    "lib": [
      "dom",
      "es6",
      "es7",
      "es2017"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/**.ts",
    "./src/**/**.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}

{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@*": [
        "./src/*"
      ],
      "styles*": [
        "./src/styles/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "outDir": "./build/",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "jsx": "react",
    "types": [
      "react",
      "jest",
      "reflect-metadata",
      "node"
    ],
    "lib": [
      "dom",
      "es6",
      "es7",
      "es2017"
    ],
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "typeRoots": [
      "node_modules/@types",
      "./src/type/declarations.d.ts"
    ]
  },
  "include": [
    "./src/type/declarations.d.ts",
    "./src/**/**.ts",
    "./src/**/**.tsx",
    "./src/**/**.scss"
  ],
  "exclude": [
    "node_modules"
  ]
}
